<% if @car.errors.any? %>
   <div class="error_explanation">
      <h3>ERROR:</h3>
      <ul>
         <% @car.errors.full_messages.each do |message| %>
            <li><%= message %></li>
         <% end %>
      </ul>
   </div>
<% end %>


<%= form_for @car do |f| %>
    <p>
       <%= f.label "Make:" %><br>
       <%= f.text_field :make %> 
    </p>
    <p>
       <%= f.label "Model:" %><br>
       <%= f.text_field :model %> 
    </p>
    <p>
       <%= f.label "Year:" %><br>
       <%= f.text_field :year %> 
    </p>
    <p>
       <%= f.hidden_field :owner_id %><br>
       <%= f.label "Currently In Garage" %>
       <%= f.check_box :in_garage %>
    </p>
    <p>
        <%= f.submit "Submit" %>
    </p>
<% end %>