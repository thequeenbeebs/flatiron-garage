


<%= form_for @user do |f|%>

  <p>
    <%= f.label "Username:" %><br>
    <%= f.text_field :username %>
  </p>
  <p>
  <%= f.label "Password:" %><br>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label "Confirm Password:" %><br>
  <%= f.password_field :password_confirmation %>
  </p>
  <%= f.submit %>
  <% end %>