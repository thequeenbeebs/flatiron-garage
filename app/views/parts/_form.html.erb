<%= form_for @part do |f| %>
    <p>
        <%= f.hidden_field :service_record_id %>
    </p>
    <p>
        <%= f.label "Number:" %><br>
        <%= f.text_field :number %>
    </p>
    <p>
        <%= f.label "Description:" %><br>
        <%= f.text_field :description %>
    </p>
    <p>
        <%= f.label "Price:" %><br>
        <%= f.text_field :price %>
    </p>
    <p>
        <%= f.submit "Submit" %>
    </p>
<% end %>