<%= form_for @part do |f| %>
    <p>
        <%= f.hidden_field :service_record_id %>
    </p>
    <p>
        <%= f.label :number %><br>
        <%= f.text_field :number %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_field :description %>
    </p>
    <p>
        <%= f.label :price %><br>
        <%= f.text_field :price %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>