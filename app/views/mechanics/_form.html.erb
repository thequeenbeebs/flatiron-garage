<%= form_for @mechanic do |f| %>
    <p>
        <%= f.label "Name:" %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label "Years of Experience:" %><br>
        <%= f.number_field :years_experience %>
    </p>
    <p>
        <%= f.label "Hire Date:" %></br>
        <%= f.date_field :hire_date %>
    </p>
    <p>
        <%= f.label "Hourly Rate:" %><br>
        <%= f.text_field :hourly_price %>
    </p>
    <p>
        <%= f.submit "Submit" %>
    </p>
<% end %>