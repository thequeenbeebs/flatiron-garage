<h2>Customers</h2>
    <div class="search">
    <%= form_tag(owners_path, method: :get) do %>
        <p><%= label_tag ("Search by Name:") %></p>
        <p><%= text_field_tag(:search, params[:search]) %></p>
        <p><%= submit_tag ("Search") %></p>
    <% end %>
    </div>

<br>

<% @owners.each do |owner| %>
    <p>
        <%= link_to owner.name, owner_path(owner) %>
    </p>
<% end %>

<br>

<div class="footer">
    <%= link_to "Add Customer", new_owner_path %>
</div>
