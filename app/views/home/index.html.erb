<% if current_user %>

    <div class="welcome">  
        <h2>Welcome, <%= current_user.username %>!</h2>
    </div>

    <div>
        <h3 class="center">Vehicles Currently in Garage:</h3>

        <table class="current">
            <thead>
                <tr>
                    <th>Vehicle</th>
                    <th>Owner</th>
                    <th></th>
                </tr>
            </thead>
            <% @cars.each do |car| %>
                <tr>
                    <td><%= car.make %> <%= car.model %></td>
                    <td><%= car.owner.name %></td>
                    <td><%= link_to "Vehicle Details", car_path(car) %></td>
                </tr>
            <% end %>
        </table>
    </div>
    <% else %>
        <div class="welcome">
        <p>Welcome to Flatiron Garage! Please log in.</p>
        </div>
    <% end %>
</div>
