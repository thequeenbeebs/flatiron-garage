<h2> Log In </h2>

<% if flash[:errors] %>
   <div class="error_explanation">
      <h3>ERROR: <%= flash[:errors] %></h3>
   </div>
<% end %>

<%= form_for (@user), :url => "/login" do |f| %>
  <p>
    <%= f.label "Username:" %><br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label "Password:" %><br>
    <%= f.password_field :password %>
  </p>
  <br>
  <p>
    <%= f.submit  "Log In"%>
  </p>
  <% end %>
</p>