<h2> Login </h2>

<% if flash[:errors] %>
<li style = "color:orange">
<%= flash[:errors]%>
</li>
<% end %>

<%= form_for (@user), :url => "/login" do |f| %>
<p>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit  "Log In"%>
  <% end %>
</p>